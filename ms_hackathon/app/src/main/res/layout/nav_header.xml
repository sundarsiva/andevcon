<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="?attr/colorPrimaryDark"
    android:padding="@dimen/nav_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/cv_margin_bottom"
        android:id="@+id/cv_user_img"
        android:layout_width="@dimen/cv_layout_width"
        android:layout_height="@dimen/cv_layout_height"
        android:src="@drawable/default_img"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="@dimen/cv_margin_top"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:paddingLeft="5sp"
        android:textSize="@dimen/tv_medium_text_size"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>